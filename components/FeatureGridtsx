export default function FeatureGrid() {
  const features = [
    { title: "Restorasi AI", desc: "Pulihkan foto rusak dengan teknologi konservatif." },
    { title: "Deteksi Kerusakan", desc: "Analisis ringan, sedang, atau berat." },
    { title: "Perbandingan Hasil", desc: "Bandingkan foto sebelum dan sesudah." },
    { title: "Keamanan Global", desc: "Lindungi data dan privasi pengguna." },
  ];

  return (
    <div className="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
      {features.map((f, i) => (
        <div
          key={i}
          className="bg-white/10 backdrop-blur p-6 rounded-xl shadow-md border border-white/20"
        >
          <h3 className="text-lg font-bold">{f.title}</h3>
          <p className="text-sm mt-2">{f.desc}</p>
        </div>
      ))}
    </div>
  );
}
